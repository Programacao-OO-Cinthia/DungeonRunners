<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2A2A40"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Container para medalha E número da posição -->
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp">

            <!-- Medalha (para posições 1, 2, 3) -->
            <ImageView
                android:id="@+id/imgMedalha"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:contentDescription="Medalha de posição" />

            <!-- Número da posição (para posições acima de 3) -->
            <TextView
                android:id="@+id/txtPosicao"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/circle_background"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Informações do Jogador -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNicknameRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RunnerName"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNivelRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nível 1"
                android:textColor="#FFD700"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtKmRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
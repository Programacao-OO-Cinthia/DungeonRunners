<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    tools:context=".TelaCadastro">

    <!-- Imagem do título -->

    <!-- Container principal com borda -->
    <ImageView
        android:id="@+id/imgtitulo"
        android:layout_width="412dp"
        android:layout_height="200dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/cardCadastro"
        app:srcCompat="@drawable/imgtitulo"
        tools:layout_editor_absoluteX="-1dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="#2A2A40"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header com título -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#1E1E30"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txtTituloCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cadastro"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Campo de Nome -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="16dp"
                android:paddingBottom="14dp">

                <EditText
                    android:id="@+id/edtNome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Nome Completo"
                    android:inputType="textPersonName"
                    android:padding="4dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#6C6C7E"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Campo de Nickname -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="16dp"
                android:paddingBottom="14dp">

                <EditText
                    android:id="@+id/edtNickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Nickname"
                    android:inputType="text"
                    android:padding="4dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#6C6C7E"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Campo de Senha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="16dp"
                android:paddingBottom="14dp">

                <EditText
                    android:id="@+id/edtSenhaCadastro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#6C6C7E"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Campo de Confirmar Senha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="16dp"
                android:paddingBottom="14dp">

                <EditText
                    android:id="@+id/edtConfirmarSenha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Confirme a Senha"
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#6C6C7E"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Botão Cadastrar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCadastrar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#FF6B35"
                android:text="Cadastrar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:elevation="0dp" />

            <!-- Botão Voltar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#3A3A52"
                android:text="Voltar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:cornerRadius="8dp"
                app:elevation="0dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>